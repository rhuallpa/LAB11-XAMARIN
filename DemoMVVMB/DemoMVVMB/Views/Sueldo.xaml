<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMVVMB.Views.Sueldo">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Entry FontSize="Title" Placeholder="Sueldo Base" Text="{Binding Sueldo}"> </Entry>
            <Entry FontSize="Title" Placeholder="Gratificacion" Text="{Binding Gratificacion}"></Entry>

            <Entry FontSize="Title" Placeholder="Calcular2" Text="{Binding Descuento}"></Entry>

            <Button Text="Calcular" FontSize="Title" Background="white" Command="{Binding CalcularSueldoNeto}"></Button>
            <Label FontSize="Title" Text="{Binding SueldoNeto}" ></Label>
            <Button Text="Calcular" FontSize="Title" Background="white" Command="{Binding CalcularNetoFinal}"></Button>

            <Label FontSize="Title" Text="{Binding NetoFinal}" ></Label>

            <Button Text="Impuesto" FontSize="Title" Background="white" Command="{Binding CalcularImpuesto}"></Button>

            <Label FontSize="Title" Text="{Binding Impuesto}" ></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>